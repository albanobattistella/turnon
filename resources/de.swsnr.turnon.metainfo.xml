<component type="desktop-application">
    <id>de.swsnr.turnon</id>
    <metadata_license>CC0-1.0</metadata_license>
    <name>Turn On</name>
    <summary>Turn on devices in your local network</summary>
    <description>
        <p>Conveniently turn on devices in your local network, such as a NAS or a gaming console,
            using WakeOnLan.</p>
        <p>Features:</p>
        <ul>
            <li>Add devices to turn on.</li>
            <li>Turn on devices with magic WakeOnLan packets.</li>
            <li>Monitor device status.</li>
        </ul>
    </description>
    <categories>
        <category>Utility</category>
    </categories>
    <keywords>
        <keyword translate="no">WakeOnLan</keyword>
    </keywords>
    <url type="homepage">https://github.com/swsnr/turnon</url>
    <url type="bugtracker">https://github.com/swsnr/turnon/issues</url>
    <url type="vcs-browser">https://github.com/swsnr/turno</url>
