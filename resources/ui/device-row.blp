using Gtk 4.0;
using Adw 1;

template $DeviceRow: Adw.ActionRow {
  title: bind (template.device as <$Device>).label;
  subtitle: bind $device_mac_address(template.device) as <string>;
  activatable: true;

  [prefix]
  Gtk.Stack {
    visible-child-name: bind $device_state_name(template.is_device_online) as <string>;

    Gtk.StackPage {
      name: "offline";

      child: Gtk.Image {
        icon-name: "sonar-symbolic";

        styles [
          "error"
        ]
      };
    }

    Gtk.StackPage {
      name: "online";

      child: Gtk.Image {
        icon-name: "sonar-symbolic";

        styles [
          "success"
        ]
      };
    }
  }

  [suffix]
  Gtk.Box {
    orientation: horizontal;
    spacing: 3;

    Label {
      label: bind (template.device as <$Device>).host;

      styles [
        "dim-label"
      ]
    }

    Gtk.Stack {
      visible-child-name: bind template.suffix_mode;
      margin-start: 12;
      hhomogeneous: false;
      transition-type: slide_left_right;

      Gtk.StackPage {
        name: "buttons";

        child: Gtk.Box {
          orientation: horizontal;

          Gtk.Button {
            icon-name: "document-edit-symbolic";
            tooltip-text: _("Edit this device");
            action-name: "row.edit";
            valign: center;

            styles [
              "flat"
            ]
          }

          Gtk.Button {
            icon-name: "user-trash-symbolic";
            tooltip-text: _("Delete this device?");
            action-name: "row.ask_delete";
            margin-start: 6;
            valign: center;

            styles [
              "flat"
            ]
          }
        };
      }

      Gtk.StackPage {
        name: "confirm-delete";

        child: Gtk.Box {
          Gtk.Button {
            label: _("Delete");
            valign: center;
            action-name: "row.delete";

            styles [
              "destructive-action",
            ]
          }

          Gtk.Button {
            label: _("Cancel");
            valign: center;
            margin-start: 6;
            action-name: "row.cancel-delete";

            styles [
              "flat"
            ]
          }
        };
      }
    }
  }
}
