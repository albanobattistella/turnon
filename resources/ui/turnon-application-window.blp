using Gtk 4.0;
using Adw 1;

template $TurnOnApplicationWindow: Adw.ApplicationWindow {
  default-width: 480;
  default-height: 480;
  title: _('Turn On');

  content: Adw.ToolbarView {
    top-bar-style: raised;

    [top]
    Adw.HeaderBar {
      [start]
      Gtk.Button {
        action-name: "win.add_device";
        icon-name: "list-add-symbolic";
        tooltip-text: C_("tooltip", "Add a new device");
      }

      [end]
      MenuButton button_menu {
        menu-model: main_menu;
        icon-name: 'open-menu-symbolic';
        primary: true;
      }
    }

    Adw.ToastOverlay feedback {
      Gtk.ScrolledWindow {
        Gtk.ListBox devices_list {
          selection-mode: none;
          vexpand: true;
          hexpand: true;
          margin-start: 12;
          margin-end: 12;
          margin-top: 12;
          margin-bottom: 12;

          styles [
            "boxed-list-separate"
          ]

          [placeholder]
          Adw.StatusPage {
            title: _('No devices');
            description: _('Add a new device to turn it on.');
            icon-name: "de.swsnr.turnon";
            vexpand: true;

            child: Gtk.Button {
              label: _("Add new device");
              action-name: "win.add_device";
              halign: center;

              styles [
                "pill",
                "suggested-action"
              ]
            };
          }
        }
      }
    }
  };
}

menu main_menu {
  section {
    item {
      label: _('_Keyboard Shortcuts');
      action: 'win.show-help-overlay';
    }

    item {
      label: _('_About Turn On');
      action: 'app.about';
    }
  }
}
